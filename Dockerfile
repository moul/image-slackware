## -*- docker-image-name: "armbuild/ocs-distrib-slackware:latest" -*-
FROM armbuild/slackware-miniroot:21Jul14
MAINTAINER Online Labs <opensource@ocs.online.net>


# Environment
ENV OCS_BASE_IMAGE armbuild/ocs-slackware:2014-07-21


# Patch rootfs
RUN wget -qO - http://j.mp/ocs-scripts | bash
# ADD ./patches/etc/ /etc/


# Remove root password
RUN passwd -d root


# TEMPORARY DEBUG ACCESS
RUN echo root:toor2 | chpasswd
RUN umask 077; mkdir /root/.ssh; echo "ssh-rsa  m" >> /root/.ssh/authorized_keys ; echo "ssh-rsa "  >> /root/.ssh/authorized_keys
